<!-- name是bundle的名字，尽量唯一 -->
<bundle name="quickstart" version="2.1.9">
    <!-- configImports节用于表示在bundle内需要引用的配置 -->
    <configImports>
        <configImport key="HTTP_STACK"/>
        <configImport key="USER_NAME" default="DefaultName" />
    </configImports>
    <beans>
    <!-- 加载bean的实现类以及想要嵌入的ServletStack -->
        <bean class="org.helium.sample.bootstrap.quickstart.SampleHttpServlet3" stacks="${HTTP_STACK}"/>
        <!-- 加载service的实现类 -->
        <bean class="org.helium.sample.bootstrap.quickstart.SampleServiceImpl"/>
        <!-- 加载SampleLogTask -->
        <bean class="org.helium.sample.bootstrap.quickstart.SampleLogTask"/>
    </beans>
</bundle>
