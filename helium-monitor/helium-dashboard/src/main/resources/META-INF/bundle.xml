<bundle name="helium-dashboard">
    <!-- 所有Bundle对Bundle外的代码引用 -->
    <configImports>
        <configImport type="STACK" key="HTTP_DASH_STACK"/>
        <configImport type="VARIABLE" key="CONTEXT_PATH_DASHBOARD" default="/dashboard/"/>
        <configImport type="VARIABLE" key="CONTEXT_PATH_DASHVIEW" default="/dashview"/>
        <configImport type="VARIABLE" key="CONTEXT_PATH_PERFMON" default="/perfmon"/>

    </configImports>
    <beans stacks="${HTTP_DASH_STACK}">
        <!-- /perfmon -->
        <bean class="org.helium.http.servlet.StaticResourceServlet">
            <setters>
                <setter field="contextPath">/perfmon</setter>
                <setter field="resourceRoot">/webroot/perfmon</setter>
                <setter field="defaultContent">index.html</setter>
            </setters>
        </bean>
        <bean class="org.helium.perfmon.monitor.GetCategoriesServlet"/>
        <bean class="org.helium.perfmon.monitor.SubscribeServlet"/>
        <bean class="org.helium.perfmon.monitor.PullServlet"/>
        <bean class="org.helium.perfmon.recoder.PerfmonRecorder"/>

        <!-- dashboard -->
        <bean class="org.helium.http.servlet.StaticResourceServlet">
            <setters>
                <setter field="contextPath">/dashview</setter>
                <setter field="resourceRoot">/webroot/dashview</setter>
                <setter field="defaultContent">index.html</setter>
            </setters>
        </bean>

        <!-- dashboard -->
        <bean class="org.helium.http.servlet.StaticResourceServlet">
            <setters>
                <setter field="contextPath">/dashboard</setter>
                <setter field="resourceRoot">/webroot/dashboard</setter>
                <setter field="defaultContent">beans.html</setter>
            </setters>
        </bean>
        <bean class="org.helium.dashboard.GetBeansServlet" />
        <bean class="org.helium.dashboard.GetWorkersServlet" />

    </beans>
</bundle>



